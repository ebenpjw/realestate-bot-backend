# NPM Configuration for Railway Deployment
# Helps prevent cache-related build issues

# Disable package-lock generation during CI
package-lock=false

# Use faster registry
registry=https://registry.npmjs.org/

# Disable audit during install to speed up builds
audit=false

# Disable funding messages
fund=false

# Use production optimizations
production=true

# Disable optional dependencies that might cause issues
optional=false

# Set cache directory (Railway will handle cleanup)
cache=/tmp/.npm

# Disable progress bar in CI
progress=false

# Set timeout for network requests
fetch-timeout=60000
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000
