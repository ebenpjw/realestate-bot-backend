# Outpaced Command Frontend - Development Environment
# This file contains working defaults for immediate development

# =============================================================================
# CORE CONFIGURATION - Ready to use
# =============================================================================

# Backend API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_WS_URL=ws://localhost:8080

# App Configuration
NEXT_PUBLIC_APP_NAME="Outpaced Command"
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_APP_VERSION=1.0.0

# Authentication
NEXT_PUBLIC_AUTH_COOKIE_NAME=auth_token
NEXT_PUBLIC_SESSION_TIMEOUT=86400000
NEXT_PUBLIC_AUTH_REDIRECT_URL=http://localhost:3000

# =============================================================================
# FEATURE FLAGS - All enabled for development
# =============================================================================

NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_REAL_TIME=true
NEXT_PUBLIC_ENABLE_TESTING_MODE=true

# =============================================================================
# REAL-TIME FEATURES
# =============================================================================

NEXT_PUBLIC_WS_RECONNECT_ATTEMPTS=5
NEXT_PUBLIC_WS_RECONNECT_DELAY=1000

# =============================================================================
# PWA CONFIGURATION
# =============================================================================

NEXT_PUBLIC_PWA_ENABLED=true
NEXT_PUBLIC_PUSH_NOTIFICATIONS_ENABLED=true

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

NEXT_PUBLIC_SHOW_DEV_TOOLS=true
NEXT_PUBLIC_LOG_LEVEL=debug
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_MOCK_API=false
NEXT_PUBLIC_BUNDLE_ANALYZER=false

# =============================================================================
# SECURITY
# =============================================================================

NEXT_PUBLIC_CSP_ENABLED=true
NEXT_PUBLIC_HSTS_ENABLED=true

# =============================================================================
# EXTERNAL SERVICES - Add your keys here when ready
# =============================================================================

# Supabase (Replace with your actual values)
# NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Google Services (Optional)
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Zoom Integration (Optional)
# NEXT_PUBLIC_ZOOM_API_KEY=your-zoom-api-key

# Analytics (Optional)
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_HOTJAR_ID=your-hotjar-id
# NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Push Notifications (Optional)
# NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key

# =============================================================================
# NOTES
# =============================================================================

# 1. This file is set up for immediate development
# 2. Uncomment and fill in external service keys as needed
# 3. For production, copy these to your hosting environment
# 4. Never commit real API keys to version control
